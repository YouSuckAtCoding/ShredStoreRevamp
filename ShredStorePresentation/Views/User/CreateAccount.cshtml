﻿
@model CreateUserRequest

@{
    Layout = config.GetValue<string>("PageLayouts:SecondaryLayout");
    ViewData["Title"] = "Create Account";
}

<div class="CreateUser">
    <h2 class="text-light">Create Account</h2>
    <form asp-action="CreateAccount" class="CreateUser-Container">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="CreateUser-NameInputContainer" id="input-container">
            <label asp-for="Name" class="inputlabel control-label text-light"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        
            <label asp-for="Age" class="inputlabel control-label text-light"></label>
            <input asp-for="Age" class="form-control" type="number" />
            <span asp-validation-for="Age" class="text-danger"></span>
        </div>
        <div class="CreateUser-EmailInputContainer" id="input-container">
            <label asp-for="Email" class="inputlabel text-light mr-5"></label>
            <input asp-for="Email" class="form-control" placeholder="user@email.com" />
            <span asp-validation-for="Email" class="text-danger"></span>

            <label asp-for="Password" class="inputlabel text-light"></label>
            <input type="password" asp-for="Password" class="form-control" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
        <div class="CreateUser-AddressInputContainer" id="input-container">
            <label asp-for="Address" class="inputlabel  text-light"></label>
            <input asp-for="Address" class="form-control" />
            <span asp-validation-for="Address" class="text-danger"></span>
        
            <label asp-for="Cpf" class="inputlabel text-light"></label>
            <input asp-for="Cpf" class="form-control" />
            <span asp-validation-for="Cpf" class="text-danger"></span>
        </div>
        <div id="input-container">
            <label asp-for="Role" class="inputlabel text-light mr-5"></label>
            <select asp-for="Role" class="form-select dropdown-toggle" asp-items="ViewBag.Roles" style="text-align:center"></select>
        </div>
        <div class="form-group mb-3 mt-3">
            <input type="submit" value="Create Account" class="btn btn-outline-light" />
        </div>
    </form>

</div>