﻿
@model CreateUserRequest

@{
    Layout = config.GetValue<string>("PageLayouts:SecondaryLayout");
    ViewData["Title"] = "Create Account";
}

<div class="text-center mt-5 mb-5 w-50" id="IndexMain">
    <h2 class="text-light">Create Account</h2>
    <div class="row d-flex justify-content-center">
        <form asp-action="CreateAccount">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group ms-2 me-2 mb-3 mt-3">
                <label asp-for="Name" class="control-label text-light"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group ms-2 me-2 mb-3 mt-3">
                <label asp-for="Age" class="control-label text-light"></label>
                <input asp-for="Age" class="form-control" type="number" />
                <span asp-validation-for="Age" class="text-danger"></span>
            </div>
            <div class="form-group ms-2 me-2 mb-3 mt-3">
                <label asp-for="Email" class="control-label text-light"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group ms-2 me-2 mb-3 mt-3">
                <label asp-for="Address" class="control-label text-light"></label>
                <input asp-for="Address" class="form-control" />
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>
            <div class="form-group ms-2 me-2 mb-3 mt-3">
                <label asp-for="Cpf" class="control-label text-light"></label>
                <input asp-for="Cpf" class="form-control" />
                <span asp-validation-for="Cpf" class="text-danger"></span>
            </div>
            <div class="form-group ms-2 me-2 mb-3 mt-3">
                <label asp-for="Password" class="control-label text-light"></label>
                <input type="password" asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group ms-2 me-2 mb-3 mt-3">
                <label asp-for="Role" class="control-label text-light"></label>
                <select asp-for="Role" class="form-select dropdown-toggle" asp-items="ViewBag.Roles" style="text-align:center"></select>
            </div>
            <div class="form-group mb-3 mt-3">
                <input type="submit" value="Create Account" class="btn btn-outline-light" />
            </div>
        </form>
    </div>
</div>